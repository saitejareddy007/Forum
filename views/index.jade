html
    head
        link(rel='icon' href='favicon.ico' type='image/x-icon')
        link(rel ="stylesheet" href='stylesheets/indexStyle.css' type="text/css")
        script.
            var post = !{JSON.stringify(posts)};
            var k = post.length-6;
    body(id="body" onscroll="loadnew(post);")
        div(class="top")
            form(action="/logout" method="post")
                button(type="submit")  logout
        div(class ="sidebar")
            <h1>    You can create a post from here.
            div(class="login")
                form(action="/new" name="Form" method="post" onsubmit="return validateForm()" enctype="multipart/form-data")
                    table
                        tr
                            td
                                input( name="post"  placeholder="what's on your mind")
                        //tr
                            td
                                input(name="file" type="file")
                        tr
                            td
                                button( type="submit" , name="submit") submit
        div(id ="main")
            -for(var c =posts.length-1;c>=posts.length-5;c--)
                div(id ="main_content")
                    p posted by #{posts[c].Name}
                    p Posted on #{posts[c].date}
                    h1 #{posts[c].Post}
                    a(href="/#{posts[c]._id}") comments
        script(src="javascripts/script.js")
